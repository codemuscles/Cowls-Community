#include <stdio.h>
#include <conio.h>
int main()
{
	int i, a,j,s=0;
	clrscr();
	printf("Enter the number of rows ");
	scanf("%d",&a);
	s=a/2;
	for(int i =0;i<2;i++)
	{
	for(int i=1;i<=a/2;i++)
	{
		for(int k=1;k<=s-i;k++)
		{
			printf(" ");
		}
		for(int j=1;j<=i;j++)
		{
			printf("* ");
		}for(int k=1;k<=s-i;k++)
		{
			printf("  ");
		}
		for(int j=1;j<=i;j++)
		{
			printf("* ");
		}
	printf("\n" );
	}
for(int i=1;i<=s;i++)
	{
		for(int k=0;k<i;k++)
		{
			printf(" ");
		}
		for(int j=s-1;j>=i;j--)
		{
			printf("* ");
		}
		for(int k= 0;k<i;k++)
		{
			printf("  ");
		}
		for(int j=s-1;j>=i;j--)
		{
			printf("* ");
		}
		printf("\n");
	}
	}
}
